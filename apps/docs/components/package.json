{
  "name": "@storefront-ui/docs",
  "version": "0.0.0",
  "private": true,
  "main": "index.md",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "dev:docs": "yarn update-files && VITE_DOCS_EXAMPLES_REACT_PATH=http://localhost:3002 VITE_DOCS_EXAMPLES_VUE_PATH=http://localhost:3001 && concurrently \"vuepress dev\" \"yarn watch-docs\" \"yarn watch-showcases\"",
    "build": "yarn update-files && VITE_DOCS_BASEPATH=/v2/ VITE_DOCS_EXAMPLES_REACT_PATH=https://docs.storefrontui.io/v2-react VITE_DOCS_EXAMPLES_VUE_PATH=https://docs.storefrontui.io/v2-vue && vuepress build",
    "watch-docs": "chokidar --initial \"./components/**/*.md\" -c \"yarn update-docs --event {event} --path {path};\"",
    "watch-showcases": "chokidar --initial \"./showcases/**/*.md\" -c \"yarn update-showcases --event {event} --path {path};\"",
    "serve": "vuepress serve",
    "clear": "yarn concurrently \"rimraf ./vue/components\" \"rimraf ./vue/showcases\" \"rimraf ./react/components\" \"rimraf ./react/showcases\"",
    "update-docs": "yarn node ./utils/createComponentList && yarn node ./utils/createFrameworksDocs",
    "update-showcases": "yarn node ./utils/createShowcaseList && yarn node ./utils/createShowcaseDocs",
    "update-files": "yarn clear && yarn concurrently \"yarn update-docs\" \"yarn update-showcases\""
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.21.5",
    "@microsoft/api-extractor": "^7.34.4",
    "@vuepress/plugin-active-header-links": "^1.9.8",
    "@vuepress/plugin-back-to-top": "^1.9.8",
    "@vuepress/plugin-medium-zoom": "^1.9.8",
    "@vuepress/plugin-search": "^1.9.8",
    "chokidar-cli": "^3.0.0",
    "command-line-args": "^5.2.1",
    "handlebars": "^4.7.7",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "vue": "^2.6.14",
    "vuepress": "^1.9.8",
    "vuepress-plugin-clean-urls": "^1.1.2"
  },
  "dependencies": {
    "autoprefixer": "^9",
    "concurrently": "^7.6.0",
    "markdown-it-external-links": "^0.0.6",
    "markdown-spellcheck": "^1.3.1",
    "postcss": "^8.0.0",
    "sass-loader": "^13.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "vue-multiselect": "^2.1.6",
    "vuepress-theme-vsf-docs": "^1.2.5"
  },
  "resolutions": {
    "webpack-hot-middleware": "2.25.3"
  }
}
