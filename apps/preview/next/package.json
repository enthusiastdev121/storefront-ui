{
  "name": "@storefront-ui/preview-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rimraf .next && next dev -p 3002",
    "build": "next build",
    "build:next": "yarn build",
    "serve": "next start",
    "lint": "next lint --ext .tsx,.ts",
    "lint:fix": "next lint --fix",
    "clean": "rimraf ./sfui",
    "sync-test": "cpy . ../../apps/preview/next/sfui/tests --cwd=../../../packages/tests/",
    "sync:watch-test": "chokidar --silent \"../../../packages/tests/**/*.{cy.tsx,ts,png,jpg,jpeg,json}\" -c \"yarn sync-test\"",
    "test": "TEST=true && yarn clean && yarn sync-test && concurrently \"yarn sync:watch-test\" \"yarn cypress open --component\"",
    "test:ci": "TEST=true && yarn clean && yarn sync-test && yarn percy exec -- cypress run --component",
    "test:ci:react": "TEST=true && yarn clean && yarn sync-test && yarn percy exec -- cypress run --component"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "next": "12.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-transition-group": "^4.4.5",
    "react-use": "^17.4.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.12.0",
    "@percy/cypress": "^3.1.2",
    "@storefront-ui/eslint-config": "workspace:*",
    "@storefront-ui/example-style": "workspace:*",
    "@storefront-ui/react": "workspace:*",
    "@storefront-ui/sass": "workspace:*",
    "@storefront-ui/shared": "workspace:*",
    "@storefront-ui/tailwind-config": "workspace:*",
    "@storefront-ui/tests-shared": "workspace:*",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/react-transition-group": "^4.4.5",
    "autoprefixer": "^10.4.8",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "cpy-cli": "^4.2.0",
    "cypress": "^11.1.0",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "react-use": "^17.4.0",
    "rimraf": "^3.0.2",
    "string-replace-loader": "^3.1.0",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.4.1"
  }
}
