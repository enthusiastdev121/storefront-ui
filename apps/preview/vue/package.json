{
  "name": "@storefront-ui/vue-preview",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:not-run": "vite",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.cypress-ct.json --composite false",
    "lints": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "clean": "rimraf ./src/components/sfui",
    "clean-coverage": "rimraf ./coverage && rimraf ./.nyc_output",
    "display-coverage": "yarn nyc report --reporter=text",
    "sync-test": "cpy . ../../apps/preview/vue/src/components/sfui/tests --cwd=../../../packages/tests/",
    "sync-components": "cpy . !dist ../../../../apps/preview/vue/src/components/sfui/vue/ --cwd=../../../packages/sfui/frameworks/vue/",
    "sync:watch-test": "chokidar --silent \"../../../packages/tests/**/*.{cy.tsx,ts,tsx,png,jpg,jpeg,json}\" -c \"yarn sync-test\"",
    "test": "yarn clean && yarn sync-test && concurrently \"yarn sync:watch-test\" \"yarn cypress open --component\"",
    "test:ci": "yarn clean && yarn clean-coverage && yarn sync-test && yarn sync-components && CYPRESS_COVERAGE=true yarn cypress run --component && yarn display-coverage",
    "test:ci:vue": "yarn test:ci"
  },
  "dependencies": {
    "pinia": "^2.0.23",
    "vue": "^3.2.41",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@percy/cli": "^1.12.0",
    "@percy/cypress": "^3.1.2",
    "@rushstack/eslint-patch": "^1.1.4",
    "@storefront-ui/eslint-config": "workspace:*",
    "@storefront-ui/sass": "workspace:*",
    "@storefront-ui/shared": "workspace:*",
    "@storefront-ui/tailwind-config": "workspace:*",
    "@storefront-ui/tests-shared": "workspace:*",
    "@storefront-ui/vue": "workspace:*",
    "@types/node": "^16.11.68",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.5.0",
    "cpy-cli": "^4.2.0",
    "cypress": "^11.0.1",
    "eslint": "^8.22.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss": "^8.4.18",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.1",
    "typescript": "~4.7.4",
    "vite": "^3.1.8",
    "vite-plugin-istanbul": "^3.0.4",
    "vue-tsc": "^1.0.8"
  }
}
