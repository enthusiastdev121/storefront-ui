{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": false,
        "declarationMap": false,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "noImplicitAny": true
    },
    "include": [
        "*.ts"
    ]
}
