{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build:shared", "^build:typography", "^build:tailwind-config", "build:release",  "^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build:shared"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "lint:fix:sfui": {
      "cache": false,
      "outputs": []
    },
    "build:next": {
      "cache": false,
      "dependsOn": ["^build:react", "^build:typography", "^build:tailwind-config"]
    },
    "build:nuxt": {
      "cache": false,
      "dependsOn": ["^build:vue", "^build:typography", "^build:tailwind-config"]
    },
    "build:react": {
      "dependsOn": ["^build:shared"],
      "cache": false
    },
    "build:vue": {
      "dependsOn": ["^build:shared"],
      "cache": false
    },
    "build:release": {
      "dependsOn": ["build:react", "build:vue"],
      "cache": false
    },
    "build:shared": {
      "cache": false
    },
    "build:typography": {
      "cache": false
    },
    "build:tailwind-config": {
      "cache": false
    },
    "build:test-utils": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "dev:docs": {
      "cache": false,
      "dependsOn": ["^build:typography", "build:tailwind-config"]
    },
    "dev:shared": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build:test-utils", "dev:shared", "^build:tailwind-config"],
      "cache": false
    },
    "test:ci:vue": {
      "dependsOn": ["^build:shared", "^build:typography", "^build:tailwind-config", "build:test-utils"],
      "cache": false
    },
    "test:ci:react": {
      "dependsOn": ["^build:shared", "^build:typography", "build:test-utils", "^build:tailwind-config"],
      "cache": false
    }
  }
}
